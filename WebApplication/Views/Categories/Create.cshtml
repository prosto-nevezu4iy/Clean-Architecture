@model WebApplication.ViewModels.CategoryViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create Category</h1>

<hr />
<form asp-action="Create" class="row g-3">
    <div class="mb-3">
        <label asp-for="@Model.Name" class="form-label">Name</label>
        <input asp-for="@Model.Name" class="form-control">
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.ParentId" class="form-label">Parent</label>
        <select asp-for="@Model.ParentId" asp-items="@Model.Categories" class="form-control">
            <option value="">Please select one</option>
        </select>
        <span asp-validation-for="@Model.ParentId" class="text-danger"></span>
    </div>
    <div class="col-12">
        <button class="btn btn-primary" type="submit">Submit</button>
    </div>
</form>

<div class="mt-3">
    <a asp-action="Index">Back to List</a>
</div>